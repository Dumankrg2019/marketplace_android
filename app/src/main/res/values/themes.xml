<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Marketplace_d" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="CustomerCategoryListTextTop">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_text_customer</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CustomerGoodTitle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black_text_customer_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="CustomerGoodPrice">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/blue_text_customer_price</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.3</item>
    </style>

    <style name="CustomerGoodPriceWithoutDisc">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">@color/grey_text_customer_priceWithoutDisc</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.2</item>
    </style>
</resources>